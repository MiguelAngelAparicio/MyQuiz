<p>
    <label for="preg" class="rem">Nueva pregunta:</label>
    <input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" />
</p>
<p>
    <label for="resp" class="rem">Respuesta:</label>
    <input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
</p>

<p>
    <label for="tema" class="rem">Tema:</label>  
    <select id="tema" name="quiz[tema]">
        <option value="Tecnología" selected>Tecnología</option>
        <option value="Ciencia">Ciencia</option>
        <option value="Ocio">Ocio</option>
        <option value="Humanidades">Humanidades</option>
        <option value="Otro">Otro</option>
    </select>
</p>
<br />

<script type="text/javascript">
    document.getElementById("tema").value = "<%= quiz.tema %>"
</script>

<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar">